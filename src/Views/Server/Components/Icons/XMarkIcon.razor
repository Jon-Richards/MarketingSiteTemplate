@namespace Views.Server.Components.Icons

<svg xmlns="http://www.w3.org/2000/svg" class="@GetIconClasses()" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
</svg>

@code {
    [Parameter]
    public string Class { get; set; } = "";

    private string GetIconClasses()
    {
        if (string.IsNullOrEmpty(Class))
        {
            return "size-6 inline-block";
        }
        return $"inline-block {Class}";
    }
}
