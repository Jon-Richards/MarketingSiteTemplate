@namespace Views.Server.Components

<a href="@Href" target="@Target" class="card-link">
    <div class="card @(Modifiers)">
        @ChildContent
    </div>
</a>

@code {
    [Parameter]
    public string BackgroundType { get; set; } = "none";

    [Parameter]
    public string BackgroundURL { get; set; } = "";

    [Parameter]
    public string Href { get; set; }

    [Parameter]
    public string Target { get; set; } = "_self";

    /// <summary>
    /// Modifier CSS classes.  These will be appended to the Card element.
    /// </summary>
    [Parameter]
    public string Modifiers { get; set; } = "";

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
