@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Sections
@using Microsoft.AspNetCore.Components.Web
@using Views.Server.Components
@using Views.Server.Features

@namespace Views.Server.Layouts

<HeadContent>
    <link rel="stylesheet" href="_content/Views/bundle/main.css" />
    <SectionOutlet SectionName="Head" />
</HeadContent>

<div class="flex flex-col min-h-screen">
    <PageHeader>
        <Heading>
            <SectionOutlet SectionName="Heading" />
        </Heading>
        <Navigation>
            <SectionOutlet SectionName="Navigation" />
        </Navigation>
    </PageHeader>

    <SectionOutlet SectionName="Flashes" />

    <main class="grow">
        @Body
    </main>
    <PageFooter />
</div>

<script src="_content/Views/bundle/main.js"></script>
<SectionOutlet SectionName="Scripts" />
